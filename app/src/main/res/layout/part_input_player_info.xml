<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    style="@style/linear_layout_mwv_style">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/card_view_margin"
        android:layout_marginTop="0dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/card_view_radius">

        <LinearLayout
            style="@style/linear_layout_mwh_style"
            android:layout_width="match_parent"
            android:baselineAligned="false">

            <FrameLayout
                style="@style/widget_mm_style"
                android:id="@+id/color_layout"
                android:layout_weight="10"/>

            <LinearLayout
                style="@style/linear_layout_mwv_style"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/text_edit_margin"
                android:layout_marginStart="@dimen/text_edit_margin"
                android:layout_marginEnd="@dimen/text_edit_margin"
                android:theme="@style/AppTheme_default_hint">

                <android.support.design.widget.TextInputLayout
                    style="@style/widget_mw_style"
                    android:id="@+id/player_belong_text_input_layout"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/text_view_style"
                        android:id="@+id/player_belong_edit_text"
                        android:paddingTop="5dp"
                        android:hint="@string/player_belong_hint_edit_text"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/widget_mw_style"
                    android:id="@+id/player_name_text_input_layout"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        style="@style/text_view_style"
                        android:id="@+id/player_name_edit_text"
                        android:paddingTop="5dp"
                        android:hint="@string/player_name_hint_edit_text"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
